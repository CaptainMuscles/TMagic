<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_ChaosTraditionHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Chaos Disorientation</label>
    <defaultLabelColor>(0.51,0.6,0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>true</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>10.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-7</severityPerDay>
      </li>
    </comps>
	<stages>
      <li>
        <label>disoriented</label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>true</becomeVisible>
		<vomitMtbDays>0.5</vomitMtbDays>
		<capMods>
		  <li>
			  <capacity>Moving</capacity>
			  <offset>-0.1</offset>
		  </li>
		  <li>
			  <capacity>Consciousness</capacity>
			  <offset>-0.15</offset>
		  </li>
		</capMods>
		<statOffsets>
		  <AimingDelayFactor>+0.15</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>ill</label>
        <minSeverity>4</minSeverity>
		<becomeVisible>true</becomeVisible>
		<vomitMtbDays>0.25</vomitMtbDays>
		<capMods>
		  <li>
			  <capacity>Moving</capacity>
			  <offset>-0.1</offset>
		  </li>
		  <li>
			  <capacity>Consciousness</capacity>
			  <offset>-0.20</offset>
		  </li>
		</capMods>
		<statOffsets>
		  <AimingDelayFactor>+0.20</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>catatonic</label>
        <minSeverity>7</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
		</capMods>
      </li>
	</stages> 
  </HediffDef>
  
</Defs>

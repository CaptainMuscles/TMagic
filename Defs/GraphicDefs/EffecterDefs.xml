<Defs>

<!-- Sabotage EMP wave -->

  <EffecterDef>
    <defName>TM_SabotageExplosion</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <moteDef>TM_Mote_SabotageExplosion</moteDef>
        <scale>
          <min>1</min>
          <max>1</max>
        </scale>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>

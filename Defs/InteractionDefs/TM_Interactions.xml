<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Learning interactions -->

  <InteractionDef>
    <defName>TM_MagicLore</defName>
    <label>discussed magic theories and practices</label>
    <workerClass>TorannMagic.Thoughts.InteractionWorker_MagicLore</workerClass>
    <symbol>Books/blankscript_magic</symbol>
    <recipientThought>TM_MagicLoreTD</recipientThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>45</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Mentored [other_nameShortIndef] in magic.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Learned magic theories from [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>
  
  <ThoughtDef>
    <defName>TM_MagicLoreTD</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>2</durationDays>
    <stackLimit>3</stackLimit>
    <stackLimitPerPawn>1</stackLimitPerPawn>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <stages>
      <li>
        <label>gained knowledge of the arcane</label>
		<description>I've been enlightening by words from a powerful mage that I respect, now I just have to apply this knowledge...</description>
		<baseMoodEffect>2</baseMoodEffect>
        <baseOpinionOffset>6</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>  
  
